rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read for integration with Main Portal
    match /students/{student} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /attendance/{record} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /mail_queue/{msg} {
      allow read, write: if request.auth != null;
    }

    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
