{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "site": "gh20261",
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "whatsapp-server/**",
            "INICIAR_ROBOT.bat",
            "*.bat",
            "*.md",
            "*.txt",
            "*.log",
            ".vscode",
            "debug_*"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}